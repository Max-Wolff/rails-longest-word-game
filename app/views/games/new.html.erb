<div class="container">
  <h1>Letter's Game</h1>
  <% @letters.each do |letter| %>
    <div class="block">
      <strong><%=  letter %></strong>
    </div>
  <% end %>

<br><br><br><br><br>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <h2>What is the longest word you can find?</h2>
  <input type="text" name="word" placeholder="Your longest word" class="bar">
  <input name="grid" type="hidden" value="<%= @grid %>" >
  <input type="submit" class="button" value="Play">
</form>

</div>
